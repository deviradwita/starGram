<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Post</title>
</head>
<body>
    <h1>Edit POst</h1>
    <% postData.forEach(el => { %>
        <form action="/posts/<%= el.id %>/edit" method="post">
            <div>
                <label >Title</label>
                <input type="text" name="title" value="<%= el.title %>">
            </div>
            <div>
                <label >Content</label>
                <input type="text" name="content" value="<%= el.content %>">
            </div>
            <div>
                <label >Tag</label>
                <select name="TagId">
                    <option selected disabled>Choose..</option>
                    <% tagData.forEach(tag => { %>
                        <option value="<%= tag.id %>" <%= el.TagId === tag.id ? 'selected' : '' %>>
                            <%= tag.name %>
                        </option>
                            <% }) %>
                        </select>
                    </div>
                    <button type="submit">Submit</button>
                </form>
                <% }) %>
    </body>
</html>